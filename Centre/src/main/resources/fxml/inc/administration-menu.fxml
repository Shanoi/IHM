                  <ImageView fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/images/buttons/star.png" />
                     </image>
                  </ImageView>
                  <Label maxHeight="1.7976931348623157E308" styleClass="h2" text="Modifier les boutiques à découvrir" textOverrun="CLIP" wrapText="true" />
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" onMouseClicked="#addStore" prefHeight="100.0" prefWidth="250.0" styleClass="admin-menu-col">
               <children>
                  <ImageView fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/images/buttons/minus.jpg" />
                     </image>
                  </ImageView>
                  <Label styleClass="h2" text="Ajouter un magasin" />
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="155.0" layoutY="5.0" onMouseClicked="#removeStore" prefHeight="100.0" prefWidth="250.0" styleClass="admin-menu-col">
               <children>
                  <ImageView fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/images/buttons/plus.jpg" />
                     </image>
                  </ImageView>
                  <Label styleClass="h2" text="Enlever un magasin" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <Label layoutX="25.0" layoutY="15.0" styleClass="h1" text="Gestion Centre commercial">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" layoutX="25.0" layoutY="60.0" prefHeight="50.0" prefWidth="100.0" styleClass="admin-menu-row">
         <children>
            <VBox alignment="CENTER" onMouseClicked="#changeHighlight" prefHeight="100.0" prefWidth="200.0" styleClass="admin-menu-col">
               <children>
                  <ImageView fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/images/buttons/event.jpg" />
                     </image>
                  </ImageView>
                  <Label styleClass="h2" text="Modifier l'activité phare" />
               </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="5.0" layoutY="5.0" onMouseClicked="#changeInfo" prefHeight="100.0" prefWidth="200.0" styleClass="admin-menu-col">
               <children>
                  <ImageView fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/images/buttons/info.jpg" />
                     </image>
                  </ImageView>
                  <Label styleClass="h2" text="Modifier les informations" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</VBox>
